{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomodoro Bar",
  "version": "0.1.0",
  "identifier": "com.pomodoro.bar",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev -- --hostname 127.0.0.1",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pomodoro Bar",
        "width": 360,
        "height": 480,
        "visible": false,
        "skipTaskbar": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
